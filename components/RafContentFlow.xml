<!--
    RafContentFlow

    UX which contains the video player that is used to play the media stream.
-->
<component
    name="RafContentFlow"
    extends="BaseFlow">

    <script
        type="text/brightscript"
        uri="pkg:/components/RafContentFlow.brs"/>

    <children>
        <Rectangle id="adFacade" />
        <Group
            id="contentFlowLayout">

            <Video
              id="videoPlayer"
              notificationInterval="0.5"/>

        </Group>
    </children>
</component>
